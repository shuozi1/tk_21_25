<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#0099cc"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="140dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/caidan"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="账户管理"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="85dp" />
        <TextView
            android:id="@+id/tv_zhgl_plcz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="900dp"
            android:text="批量充值"
            android:textSize="30dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_zhgl_czjl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="1050dp"
            android:text="充值记录"
            android:textSize="30dp"
            android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/hdhk"
        android:layout_height="120dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="车辆编号"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_gravity="center"
            android:text="账户余额"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="430dp"
            android:text="选项"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:text="操作"
            android:textSize="40dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/listview_zhgl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>