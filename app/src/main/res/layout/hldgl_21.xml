<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#0099cc"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="140dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/caidan"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="红绿灯管理"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="85dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="55dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红绿灯信息管理"
            android:textSize="45dp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/ig_hldgl_21"
            android:layout_width="250dp"
            android:layout_gravity="right"
            android:layout_marginLeft="600dp"
            android:layout_height="90dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="排序："
            android:textSize="50dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <Spinner
            android:layout_marginLeft="35dp"
            android:id="@+id/sp_hldgl_21"
            android:layout_width="600dp"
            android:layout_gravity="center"
            android:entries="@array/hldgl"
            android:layout_height="65dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="245dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="路口"
            android:background="@drawable/hk"
            android:gravity="center"
            android:textSize="38dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="70dp"
            android:text="红灯时长(s)"
            android:background="@drawable/hk"
            android:gravity="center"
            android:textSize="38dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="70dp"
            android:text="黄灯时长(s)"
            android:background="@drawable/hk"
            android:gravity="center"
            android:textSize="38dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="70dp"
            android:text="绿灯时长(s)"
            android:background="@drawable/hk"
            android:gravity="center"
            android:textSize="38dp"/>

    </LinearLayout>
    <ListView
        android:id="@+id/listview_hldgl_21"
        android:layout_width="match_parent"
        android:divider="@null"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="245dp"/>
</LinearLayout>